<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginBottom="80dp"
    android:background="@drawable/main_bg"
tools:context=".View.ProfileFragment">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

      >
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".View.ProfileFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/avatarUserProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/user"
                    android:scaleType="fitCenter"
                    android:background="@drawable/img_border"
                    android:clipToOutline="true"
                    />
                <LinearLayout
                    android:layout_width="243dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/font_color"
                        android:fontFamily="@font/bungee_regular"
                        android:id="@+id/UserNameProfile"
                        android:layout_width="196dp"
                        android:layout_height="89dp"

                        android:gravity="center"
                        android:textSize="17dp"
                        android:text="Tên người dùng"
                        android:textAppearance="?attr/textAppearanceTitleLarge" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnRedirectUpdateFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/bungee_regular"
                            android:layout_marginRight="50dp"
                            android:text="Edit Infor"
                            android:textSize="7dp" />

                        <Button
                            android:id="@+id/btnLogout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/bungee_regular"
                            android:text="Đăng xuất"
                            android:textSize="7dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp"
                android:gravity="center">


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:singleLine="true"/>

            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/LinearUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="20dp"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/font_color"
                        android:text="Full Name" />

                    <EditText
                        android:id="@+id/edtFullNameUpdateInfor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Nguyễn Ngọc Lâm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView611"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/font_color"
                        android:text="Email" />

                    <EditText
                        android:id="@+id/edtEmailUpdateInfor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="nguyenngoclam2k3d@gmail.com" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6111"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/font_color"
                        android:text="Number" />

                    <EditText
                        android:id="@+id/edtNumberUpdateInfor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="0123456789" />
                </LinearLayout>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btnUpdateInfor"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Update" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="0dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_margin="30dp"

                    android:scaleType="fitCenter"
                    android:src="@drawable/thongbao" />

                <LinearLayout
                    android:layout_width="243dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/bungee_regular"
                        android:gravity="center"
                        android:text="Thư viện nhạc"
                        android:textAppearance="?attr/textAppearanceTitleLarge"
                        android:textColor="@color/font_color"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/bungee_regular"
                        android:text="Trên thiết bị"
                        android:textColor="@color/font_color"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="400dp"
                android:layout_height="350dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="142dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/bungee_regular"
                    android:text="Favorite PlayList"
                    android:textColor="@color/font_color"
                    android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerViewFarvoritePlaylist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

</ScrollView>
