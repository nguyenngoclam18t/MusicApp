<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="175dp"
    android:layout_height="250dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imgCardHomePage"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/img_border"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_img_musicnews1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleCardHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bài hát"
        android:padding="10px"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCardHomePage" />

    <TextView
        android:id="@+id/descCardHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:text="Tác giả"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCardHomePage" />
</androidx.constraintlayout.widget.ConstraintLayout>