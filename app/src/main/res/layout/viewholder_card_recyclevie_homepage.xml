<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="295dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imgCardHomePage"
        android:layout_width="197dp"
        android:layout_height="191dp"
        android:background="@drawable/img_border"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_img_musicnews1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleCardHomePage"
        android:layout_width="163dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:padding="10px"
        android:singleLine="true"
        android:text="Tên bài hát"
        android:textColor="@color/font_color"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCardHomePage" />

    <TextView
        android:id="@+id/descCardHomePage"
        android:layout_width="164dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:padding="10px"
        android:singleLine="true"
        android:text="Tác giả"
        android:textColor="@color/font_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCardHomePage" />

    <TextView
        android:id="@+id/DateCardHomePage"
        android:layout_width="159dp"
        android:layout_height="23dp"
        android:layout_marginTop="4dp"
        android:padding="10px"
        android:text=""
        android:textColor="@color/font_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descCardHomePage" />
</androidx.constraintlayout.widget.ConstraintLayout>